{
  "ChildFund": {
    // Synchronous API endpoint (legacy)
    "BaseUrl": "https://pubwebapi.childfund.org/api/v1",
    // Asynchronous API endpoint (recommended for better performance)
    "AsyncBaseUrl": "https://pubwebapi-async.childfund.org/api/v1",
    // Set to true to use async endpoints (appends "Async" to method names automatically)
    // Example: "ChildInventory/GetRandomKidsForWeb" becomes "ChildInventory/GetRandomKidsForWebAsync"
    "UseAsyncEndpoints": false,
    "EnableThrottlingHeaders": false,
    // API authentication key
    "ApiKey": "User=your-api-key-here",
    // Authentication endpoint path
    "AuthenticatePath": "Account/Authenticate/",
    // HTTP connection settings
    "RequestTimeoutSeconds": 30,
    "ConnectionLifetimeMinutes": 5,
    "MaxConnectionsPerServer": 10,
    "ConnectionIdleTimeoutMinutes": 2
  }
}