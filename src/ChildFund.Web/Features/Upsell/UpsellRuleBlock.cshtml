@model ChildFund.Web.Features.Upsell.Models.UpsellRuleViewModel

@if (Model?.Variants != null && Model.Variants.Any())
{
    <section class="cf-upsell-block">
        @if (!string.IsNullOrWhiteSpace(Model.RuleName))
        {
            <h3 class="cf-upsell-title">@Model.RuleName</h3>
        }

        <div class="cf-upsell-grid">
            @foreach (var v in Model.Variants)
            {
                <article class="cf-upsell-card">
                    <div class="cf-upsell-body">
                        <div class="cf-upsell-code">
                            <a href="@Url.ContentUrl(v.ContentLink)">@v.Name</a>
                        </div>
                        @if (v.Price.HasValue)
                        {
                            <div class="cf-upsell-price">@v.Price.Value.ToString("C")</div>
                        }
                    </div>

                </article>
            }
        </div>
    </section>
}

<style>
    .cf-upsell-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .cf-upsell-card {
        border: 1px solid #eee;
        border-radius: .5rem;
        padding: 1rem;
        width: 320px;
    }

    .cf-upsell-title {
        margin-bottom: .75rem;
    }

    .cf-upsell-code {
        font-weight: 600;
    }

    .cf-upsell-price {
        margin: .25rem 0 .5rem;
    }

    .cf-upsell-tags {
        font-size: .85rem;
        color: #666;
    }

    .cf-upsell-actions {
        margin-top: .5rem;
    }

    .cf-btn {
        padding: .5rem .75rem;
        border: 0;
        border-radius: .375rem;
        cursor: pointer;
    }

    .cf-btn-primary {
        background: #0059b2;
        color: #fff;
    }
</style>