
@model ChildFund.Features.Commerce.CatalogContent.Variant.GenericVariant

<article>
    <header>
        <h1>@(string.IsNullOrWhiteSpace(Model.DisplayName) ? Model.Name : Model.DisplayName)</h1>
    </header>

    @if (Model.ImageReference != null && !ContentReference.IsNullOrEmpty(Model.ImageReference))
    {
        <figure>
            <img src="@Url.ContentUrl(Model.ImageReference)" alt="@Model.Name" />
            <figcaption>Image for @Model.Name</figcaption>
        </figure>
    }

    <section>
        <h2>Main Content</h2>
        @Html.PropertyFor(x => x.MainBody)
    </section>

    <section>
        <h2>Details</h2>
        <dl>
            <dt>Marketing Id</dt>
            <dd>@Model.MarketingId</dd>

            <dt>Financial Code</dt>
            <dd>@Model.FinancialCode</dd>

            <dt>Exclude From Search</dt>
            <dd>@Model.ExcludeFromSearch</dd>

            <dt>Hide Site Header</dt>
            <dd>@Model.HideSiteHeader</dd>

            <dt>Hide Site Footer</dt>
            <dd>@Model.HideSiteFooter</dd>

            <dt>Page Title Text Color</dt>
            <dd>@Model.PageTitleTextColor</dd>

            <dt>Page Title Background Color</dt>
            <dd>@Model.PageTitleTextBackgroundColor</dd>
        </dl>
    </section>

    @if (Model.CssFiles != null && Model.CssFiles.Any())
    {
        <section>
            <h2>CSS Files</h2>
            <ul>
                @foreach (var item in Model.CssFiles)
                {
                    <li>
                        <a href="@item.Href">@(!string.IsNullOrWhiteSpace(item.Text) ? item.Text : item.Href)</a>
                    </li>
                }
            </ul>
        </section>
    }

    @if (!string.IsNullOrWhiteSpace(Model.Css))
    {
        <section>
            <h2>Inline CSS (as text)</h2>
            <pre>@Model.Css</pre>
        </section>
    }
</article>