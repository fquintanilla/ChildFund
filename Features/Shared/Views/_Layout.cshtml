@using ChildFund.Features.Shared.Interfaces
@using ChildFund.Infrastructure.Cms.Helpers
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using HtmlHelperExtensions = ChildFund.Infrastructure.Cms.Extensions.HtmlHelperExtensions

@model ChildFund.Features.Shared.Interfaces.IContentViewModel<IContent>

@if (Model == null) {return;}

@{
	Layout = "~/Features/Shared/Views/_MasterLayout.cshtml";
	var foundationPageData = Model.CurrentContent as IFoundationContent;
	var cacheBustingString = Model.Layout?.CssCacheVersion;
	var hasCacheBustingString = !string.IsNullOrEmpty(cacheBustingString);
}

@section head
{
	@await RenderSectionAsync("head", required: false)
}

@section AdditionalStyles {
	@RenderSection("AdditionalStyles", false)
}

<body>

<header class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container">
        <a class="navbar-brand" href="@Url.Content("~/")">ChildFund</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="@Url.Content("~/")">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Content("~/cart")">Cart</a></li>
            </ul>
        </div>
    </div>
</header>

<main class="container mb-5">
    @RenderBody()
    @HtmlHelperExtensions.RenderBodyScripts(Html, Model.CurrentContent)
</main>

<footer class="bg-light py-3 border-top">
	<div class="container text-center">
		<span class="text-muted">&copy; @DateTime.Now.Year</span>
	</div>
</footer>

<!-- JavaScript -->
@if (hasCacheBustingString)
{
    <script src="~/scripts/main.bundle.js?v=@cacheBustingString" type="module"></script>
}
else
{
    <script src="~/scripts/main.bundle.js" type="module" asp-append-version="true"></script>
}

@RenderSection("AdditionalScripts", false)
@Html.RequiredClientResources("Footer")
@HtmlHelperExtensions.RenderFooterScripts(Html, Model.CurrentContent)

@if (!ViewHelper.IsEditMode && !ViewHelper.IsPreviewMode)
{
	@Model.SchemaMarkup
}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

@await RenderSectionAsync("Scripts", required: false)

</body>